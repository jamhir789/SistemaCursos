


@{
    ViewData["Title"] = "Categorias";
}

<h2>CATEGORIAS</h2>

<p>
    <a class="btn btn-primary" data-toggle="modal" data-target="#moAgregar">Agregar Categoria</a>

</p>
<!--Creamos un boton para filtrar los datos-->

<div class="form-group">
   
    <div class="col-md-3">
            <input id="filtrar" name="filtrar" placeholder="Buscar" onkeyup="filtrarDatos(1,'nombre');" class="form-control" />
    </div>

</div>
<br />
<br />
<table class="table table-condensed table-bordered">
    <thead>
        <tr>

            <th scope="col">
                <a href="#" onclick='filtrarDatos(1,"nombre")'>Nombre</a>
            </th>
            <th scope="col">
                <a href="#" onclick='filtrarDatos(1,"des")'>Descripcion</a>
            </th>
            <th scope="col">
                <a href="#" onclick='filtrarDatos(1,"estado")'> Estado</a>
            </th>
                <th scope="col">Opciones</th>
        </tr>
    </thead>
    <tbody id="resultSearch"></tbody>
</table>
<div id="paginado">

</div>


<!-----MODEL Agregar--->
<div class="modal fade" id="moAgregar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Agregar Categoria</h4>
            </div>
            <div class="modal-body">
                <form asp-action="">

                    <div class="form-group">
                        <label for="Nombre" class="control-label">Nombre</label>
                        <input name="Nombre" id="Nombre" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label for="Descripcion" class="control-label">Descripcion</label>
                        <input for="Descripcion" name="Descripcion" id="Descripcion" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="Roles" class="control-label">Estado</label>
                        <select id="Estado" name="Estado" class="form-control" onclick="">
                            <option value="0">Seeccione un estado</option>
                            <option value='true'>Activo</option>
                            <option value='false'>Desactivado</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <p id="mensaje"></p>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick=" agregarCategoria('Categorias/CreateCategoria')">Guardar </button>
            </div>
        </div>
    </div>
</div>
<!------------------------------------------------------>
<!--MODAL ESTADO-->
<div class="modal fade" id="moEstado" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="titleCategoria">Agregar Categoria</h4>
            </div>
            <div class="modal-body">
                

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="editarCategorias('Categorias/editarCategoria')"> Aceptar </button>
            </div>
        </div>
    </div>
</div>
