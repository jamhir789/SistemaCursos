    ViewData["Title"] = "Index";
}

<h2>Cursos</h2>


<div class="form-group">

    <div class="col-md-3">
        <p>
            <a class="btn btn-primary" data-toggle="modal" data-target="#modalCS">Crear Curso</a>

        </p>
        <input id="filtrar" name="filtrar" placeholder="Buscar" onkeyup="filtrarCursos(1,'Nombre')" class="form-control" />
    </div>
</div>
<br />
<br /><br />
<br /><br />

      <table class="table table-bordered">
          <thead>
              <tr>
                  <th>
                     <strong> <a href="#"  onclick='filtrarCursos(1,"nombre")'> Nombre</a> </strong>
                  </th>
                  <th>
                      <a href="#" onclick='filtrarCursos(1,"des")'> Descripcion</a>
                  </th>
                  <th>
                      <a href="#" onclick='filtrarCursos(1,"creditos")'>  Creditos</a>
                  </th>
                  <th>
                      <a href="#" onclick='filtrarCursos(1,"horas")'>  Horas</a>
                  </th>
                  <th>
                      <a href="#" onclick='filtrarCursos(1,"costo")'>   Costo</a>
                  </th>
                  <th>
                      <a href="#" onclick='filtrarCursos(1,"estado")'> Estado</a>
